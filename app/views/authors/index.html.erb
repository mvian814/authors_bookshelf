      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
      <%= stylesheet_link_tag "application.css" %>
      <link href="https://fonts.googleapis.com/css?family=Chicle|Raleway" rel="stylesheet">
      <style>
        /* Make the image fully responsive */
        .carousel-inner img {
            width: 100%;
            height: 100%;
        }
        </style>

  </head>


<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <!-- Brand/logo -->
    <a class="navbar-brand" href="#">
      <%= image_tag "quill.png", alt: "logo", height: '50px' %>
    </a>
    <ul class="navbar-nav">
      <!-- <li class="nav-item">
        <a class="nav-link" href="#">Add a Book</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Add an Author</a>
      </li> -->
      <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
              Add
            </a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="#">Author</a>
              <a class="dropdown-item" href="#">Book</a>
            </div>
      </li>
    </ul>
  </nav>

  <div class="w3-container w3-center w3-animate-opacity">
  <h1>The Author's Bookshelf</h1>
  </div>

  <% @authors.each do |author| %>

  <div class="container">

  <div class="row">
      <div class="col big-box">
        <h3>Author Information</h3>

          <h6><%= author.name %></h6>
          <%= image_tag "default_author.png",class:'rounded-circle', width: '300px',  height: '250px' %>

          <p>Bio: <%= author.bio %></p>
          <p>Genre: <%= author.genre %> </p>
          <p>Preferred Publisher: <%= author.publisher %> </p>
      </div>



      <div class="col">
              <div class="row">
                <div class="col mini-box">
                  <h3>Book Information</h3>
                  <% author.books.each do |book| %>
                   <p>Title:  <%= book.title %></p>
                   <p>isbn:  <%= book.isbn %></p>
                   <p>Summary:  <%= book.summary %></p>
                   <% end %>



                </div>

              </div>

      </div>




    <% end %>

    </div>
</div>

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Add a Book</title>
  </head>
  <body>

    <div class="wrapper">



    <%= form_for @book do |form| %>
    <br>
      <%= form.label :title %>
      <%= form.text_field :title%>
    <br>
      <%= form.label :isbn %>
      <%= form.text_field :isbn %>
    <br>
      <%= form.label :summary %>
      <%= form.text_field :summary %>
    <br>

    <%= form.submit "Add an Book", class: 'btn' %>

    <% end %>
    </div>






  </body>
</html>

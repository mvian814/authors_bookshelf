        <%= stylesheet_link_tag "application.css" %>
        <link href="https://fonts.googleapis.com/css?family=Chicle|Raleway" rel="stylesheet">
  </head>


<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <!-- Brand/logo -->
    <a class="navbar-brand" href="#">
      <%= image_tag "quill.png", alt: "logo", height: '50px' %>
    </a>

    <!-- Links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="#">Add a Book</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Add an Author</a>
      </li>
    </ul>
  </nav>

<div class="container">

<h1>The Author's Bookshelf</h1>

<% @authors.each do |author| %>

  <div class="row">
      <div class="col big-box">
        <h3>Author Information</h3>

          <h6><%= author.name %></h6>
          <p>Bio: <%= author.bio %></p>
          <p>Genre: <%= author.genre %> </p>
          <p>Preferred Publisher: <%= author.publisher %> </p>

      </div>



      <div class="col">
              <div class="row">
                <div class="col mini-box">
                  <h3>Book Information</h3>

                  </div>

              </div>

      </div>




    <% end %>

    </div>
</div>
